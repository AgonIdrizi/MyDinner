<div class="welcome">
  <div class="welcome-image">
  </div>
  <div class="welcome-info">
  	<h1>My Dinner</h1>
  	<h2>Food made easy for everyone</h2>
  	<p>The Thompson Diner is a creative interpretation of the classic American favourite, offering modern fare with a refined twist. Shareables, great cocktails, tasty local desserts, and fresh pressed juices from Greenhouse Juicery, round out a menu featuring classic diner favourites like burgers, milkshakes, omelettes, and great fries of course. This ingredient focused, neighborhood hot spot, is open from 6 am to 3 am daily, and for brunch on weekends.
  	</p>
  	<p class="welcome-info-social-media">Follow us on Facebook and Instagram </p>
  </div>
  <div class="glide welcome-slide-menu">
    <div class="glide__track cards-items" data-glide-el="track">
    <ul class="glide__slides">
      <%= @items.each do |item| %>
        <li class="glide__slide card-item card-item<%=item.id%>">
          <%= render  'welcomes/item_welcome' , item: item, line_item: @line_item %>
        </li>
        
      <% end %>
    </ul>
     <div class="glide__arrows" data-glide-el="controls">
       <button class="glide__arrow glide__arrow--left" data-glide-dir="<">prev</button>
       <button class="glide__arrow glide__arrow--right" data-glide-dir=">">next</button>
    </div>

    </div>
  </div>
  <div class="welcome-customer-feedback">
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
<script>
 var button = document.querySelector('#api-update-button')
 var glide = new Glide('.glide', { 
  startAt: 0 , 
  perView: 4, 
  autoplay: 2500,
  gap: 50,
  breakpoints: {
    1024: {
      perView: 4
    },
    600: {
      perView: 2
    }
  }
}).mount()



button.addEventListener('click', function () {
  glide.update({
    type: 'slider',
    hoverpause: true
    //focusAt: 'center',
    
  })
})
</script>
