
<div class=' checkout'>
  <h3 >Checkout</h3>
  <div class=' checkout-form'>
  	<%= form_for @checkoutform, url: checkout_path do |form| %>
  	  <div class="form-group">
  	  	<%= form.label :email %>
  	  	<%= form.email_field :email, value: current_user.email, class: 'form-control' %>
  	  </div>
  	  <div class="form-group">
  	  	<%= form.label :line1 %>
  	  	<%= form.text_field :line1, class: 'form-control' %>
  	  	<%= form.label :state %>
  	  	<%= form.text_field :state, class: 'form-control' %>
  	  	<%= form.label :city %>
  	  	<%= form.text_field :city, class: 'form-control' %>
  	  	<%= form.label :postal_code %>
  	  	<%= form.number_field :postal_code, class: 'form-control' %>
  	  </div>
  	  <div class="col text-center form-group">
  	  	<%= form.submit 'Place Order', class: 'btn'%>
  	  </div>
  	<% end %>
  </div>
</div>
